# Firebase Configuration (Backend)
# Copy this to .env and replace with your actual Firebase project credentials

FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Server Configuration
PORT=3000
NODE_ENV=development

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Authentication
JWT_SECRET=your-development-jwt-secret-key

# Google OAuth (for additional OAuth configuration if needed)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OpenAI Configuration (AI Canvas Agent)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.1
OPENAI_REQUEST_TIMEOUT=30000
OPENAI_RATE_LIMIT_PER_MINUTE=60
OPENAI_RATE_LIMIT_PER_HOUR=1000
OPENAI_COST_LIMIT_PER_DAY=10.00
